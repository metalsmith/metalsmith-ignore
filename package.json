{
  "name": "@metalsmith/remove",
  "version": "1.2.0",
  "description": "A Metalsmith plugin to remove files from the build",
  "keywords": [
    "ignore",
    "metalsmith-plugin",
    "metalsmith"
  ],
  "homepage": "https://github.com/metalsmith/remove#readme",
  "bugs": {
    "url": "https://github.com/metalsmith/remove/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metalsmith/remove.git"
  },
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "types": "lib/types.d.ts",
  "source": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "type": "module",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.js"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "dev": "nodemon --exec 'npm test'",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "build": "microbundle --target node --no-sourcemap -f cjs,esm --strict --types",
    "pretest": "npm run build",
    "test": "nyc mocha"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "metalsmith": "^2.4.1",
    "microbundle": "^0.15.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.2.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.4.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "debug": "^4.3.3"
  }
}
